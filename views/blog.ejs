<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('templates/head') %> 
  <link rel="stylesheet" href="./style/home.css">
  <link rel="stylesheet" href="./style/blog.css">
</head>
<body>
  <%- include('templates/header') %> 
    <main>
      <h3> ALL BLOG POSTS </h3>
      <br />
      <div class="my-posts">
        <% if (!posts) { %>
        <h1>No posts written yet.</h1>
        <% } else { %>
        <ol class="all-posts">
          <% for(let post of posts) { %>
          <li class="post">
            <div class="post-item">
              <h3><%= post.title %></h3>
              <p><%= post.summary %></p>
            </div>
            <div class="post-item">
              <i>Written by: <%= post.author.authorName %></i> ||
              <i> <%= post.date %> </i>
              </div>
            <div class="post-item">
              <%= post.content %>
            </div>
            <div class="post-item">
              <form action="/post/<%= post._id %>/" method="get">
                <input
                  type="hidden"
                  name="_csrf"
                  value="<%= locals.csrfToken %>"
                />
                <button>View1</button>
              </form> 
              <% if (locals.isAdmin) { %>
                <form action="/post/<%= post._id %>/delete" method="post">
                  <input
                    type="hidden"
                    name="_csrf"
                    value="<%= locals.csrfToken %>"
                  />
                  <button>Delete</button>
                </form>
                
              <% } %>

              
            </div>
          </li>
          <% } %>
        </ol>
        <% } %>
      </div>

    </main>
</body>
</html>